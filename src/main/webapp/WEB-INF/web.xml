<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Shop Management System</display-name>

    <!-- Порядок фильтров важен! -->

    <!-- 1. Character Encoding -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.shop.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <!-- 2. Security Headers -->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.shop.filter.SecurityFilter</filter-class>
    </filter>

    <!-- 3. XSS Protection -->
    <filter>
        <filter-name>XSSFilter</filter-name>
        <filter-class>com.shop.filter.XSSFilter</filter-class>
    </filter>

    <!-- 4. Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.shop.filter.AuthenticationFilter</filter-class>
    </filter>

    <!-- Filter Mapping -->
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>XSSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- Welcome Files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error Pages -->
    <error-page>
        <error-code>403</error-code>
        <location>/login</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/views/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/views/error.jsp</location>
    </error-page>

</web-app>